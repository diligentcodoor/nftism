{
  "compilerOptions": {
    "lib": ["es5", "es6", "esnext"],
    "target": "es5",
    "module": "amd",
    "moduleResolution": "node",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "declaration": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "outFile": "./dist/index.js"
  }
}
